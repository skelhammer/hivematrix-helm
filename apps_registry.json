{
  "core_apps": {
    "core": {
      "name": "HiveMatrix Core",
      "description": "Authentication & service registry - Required",
      "git_url": "https://github.com/skelhammer/hivematrix-core",
      "port": 5000,
      "required": true,
      "dependencies": ["postgresql"],
      "install_order": 1
    },
    "nexus": {
      "name": "HiveMatrix Nexus",
      "description": "Frontend gateway and UI - Required",
      "git_url": "https://github.com/skelhammer/hivematrix-nexus",
      "port": 443,
      "required": true,
      "dependencies": ["core", "keycloak"],
      "install_order": 2
    }
  },
  "default_apps": {
    "codex": {
      "name": "HiveMatrix Codex",
      "description": "Central data hub for MSP operations",
      "git_url": "https://github.com/skelhammer/hivematrix-codex",
      "port": 5010,
      "required": false,
      "dependencies": ["postgresql", "core"],
      "install_order": 3
    },
    "ledger": {
      "name": "HiveMatrix Ledger",
      "description": "Billing calculations and invoicing",
      "git_url": "https://github.com/skelhammer/hivematrix-ledger.git",
      "port": 5030,
      "required": false,
      "dependencies": ["postgresql", "core", "codex"],
      "install_order": 4
    },
    "knowledgetree": {
      "name": "HiveMatrix KnowledgeTree",
      "description": "Knowledge management with graph database",
      "git_url": "https://github.com/skelhammer/hivematrix-knowledgetree",
      "port": 5020,
      "required": false,
      "dependencies": ["neo4j", "core", "codex"],
      "install_order": 5
    },
    "template": {
      "name": "HiveMatrix Template",
      "description": "Template for new HiveMatrix services",
      "git_url": "https://github.com/skelhammer/hivematrix-template",
      "port": 5040,
      "required": false,
      "dependencies": ["core"],
      "install_order": 6
    },
    "brainhair": {
      "name": "Brain Hair",
      "description": "AI API Gateway with PHI/CJIS filtering for Claude integration",
      "git_url": "https://github.com/skelhammer/hivematrix-brainhair",
      "port": 5050,
      "required": false,
      "dependencies": ["core", "codex", "knowledgetree"],
      "install_order": 7
    },
    "archive": {
      "name": "HiveMatrix Archive",
      "description": "Document and file archival system",
      "git_url": "https://github.com/skelhammer/hivematrix-archive",
      "port": 5012,
      "required": false,
      "dependencies": ["core", "codex"],
      "install_order": 8
    },
    "beacon": {
      "name": "HiveMatrix Beacon",
      "description": "Real-time ticket monitoring dashboard",
      "git_url": "https://github.com/skelhammer/hivematrix-beacon",
      "port": 5001,
      "required": false,
      "dependencies": ["core", "codex"],
      "install_order": 9
    }
  },
  "system_dependencies": {
    "keycloak": {
      "name": "Keycloak",
      "description": "Authentication server",
      "version": "26.4.0",
      "download_url": "https://github.com/keycloak/keycloak/releases/download/26.4.0/keycloak-26.4.0.tar.gz",
      "port": 8080,
      "required": true,
      "install_order": 0
    },
    "postgresql": {
      "name": "PostgreSQL",
      "description": "Relational database",
      "apt_package": "postgresql postgresql-contrib",
      "required": true
    },
    "neo4j": {
      "name": "Neo4j",
      "description": "Graph database for KnowledgeTree",
      "required": false,
      "install_script": "install_neo4j.sh"
    }
  }
}
